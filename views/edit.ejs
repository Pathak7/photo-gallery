<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Album- <%=album.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/album/<%= album.name %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="cover" value="<%= album.cover %>" required>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= album.description %>" >
                </div>
               
                
               
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit!</button>
                </div>
            </form>
            <a href="/album/<%=album.name%>">Go Back</a>
        </div>
    </div>
</div>




  
 
