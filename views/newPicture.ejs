<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Upload image to Album- <%=album%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/album/<%=album%>" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="caption" placeholder="Caption" required>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="Description" >
                </div>
               
                <div class="form-group">
                    <input class="form-control" type="text" name="url" placeholder="Picture image url" required>
                </div>
               
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/album/<%=album%>">Go Back</a>
        </div>
    </div>
</div>




  
 
