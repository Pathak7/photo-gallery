<% include partials/header %>

<div class="row" style="display:flex; flex-wrap: wrap;">
    <div class="col-lg-12">
        <center>
           <img src="<%=album.cover%>" style="width:100%; height:300px;" >
         </center>
         
    </div>
</div>


    
     <div class="container">
            
        <center>
            <div class="caption">
                       <h4><%= album.name %></h4>
                   </div>
            
            <p><h4><%= album.description  %></h4><p>
            <p>
                <a class="btn btn-primary btn-lg" href="/album/<%=album.name%>/new">Upload Picture</a>
                 <% if(typeof currentUser !== 'undefined'){ %>
                 <% if(typeof album !== 'undefined') { %>
            <% if(currentUser.username==album["creator"]){ %>
                            <a class="btn btn-primary btn-lg" href="/album/<%=album.name%>/edit">Edit Album</a>
                            <form id="delete" action="/album/<%= album.name %>?_method=DELETE" method="POST">
                <button class="btn btn-danger btn-lg">Delete</button>
            </form>
                            
        <%        }}}  %>
             </p>
             
             <div>
       <h4>Created by : <%=album.creator%></h4> 
    </div>
    <div>
        <h4>Date-Time Created <%= album.dt %></h4>
    </div>
    <div>
        <h4> Type: <%= album.visibilty %></h4>
       
    </div>
             
            
        </center>
        </div>
        
    
    
    
    
    
    
    
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% album.pictures.forEach(function(picture){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    
                   <img src="<%= picture[0] %>">
                  
                   
                </div>
                <div class="caption">
                    
                       <h4><a href="/album/<%=album.name%>/<%=picture[1]%>/"><%= picture[1] %></a></h4>
                   </div>
            </div>
        <% }); %>
    </div>

    
    
    
    
    
    
    
    
    
</div>

<% include partials/footer %>